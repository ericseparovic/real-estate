extends ../layout/index

block content
    div.py-5
        div.flex.justify-center.w-full.items-center 
            h1.text-4xl.my-4.font-extrabold.text-center.px-2.pt-3.text-sky-800 Real
            h2.text-4xl.my-4.font-extrabold.text-center.px-2.pt-3.bg-sky-800.text-white.rounded Estate

        div.mt-10.mx-auto.max-w-md
            h2.text-gray-600.text-center.mb-5.text-2xl.font-extrabold= page
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="auth/reset-password")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="name") Email
                        input#email.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400.mb-4(placeholder="Your email" type="text" name="email")

                    div(class="flex items-center justify-between")
                        a(href="/auth/login" class="text-gray-500 text-sm") Do you already have an account? Login
                        a(href="/auth/signup" class="text-gray-500 text-sm") Don't have a user? Sign up


 
                    input(class="w-full bg-sky-800 hover:bg-sky-600 cursor-pointer text-white font-bold py-3"  type="submit" value="Sign in")