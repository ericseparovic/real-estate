extends ../layout/index

block content
    div.py-5
        div.flex.justify-center.w-full.items-center 
            h1.text-4xl.my-4.font-extrabold.text-center.px-2.pt-3.text-sky-800 Real
            h2.text-4xl.my-4.font-extrabold.text-center.px-2.pt-3.bg-sky-800.text-white.rounded Estate

        div.mt-10.mx-auto.max-w-md 
            h2(class="text-2xl font-bold text-center my-10 text-slate-500")=page
            p(class= error ? "bg-red-500 text-center" : "bg-green-500 text-center")=message

        
            if !error
                a(href="/auth/login" class="text-center font-bold text-sm text-sky-900 uppercase block mt-10") Login