extends ../layout/index

block content
    div.py-5
        div.flex.justify-center.w-full.items-center 
            h1.text-4xl.my-4.font-extrabold.text-center.px-2.pt-3.text-sky-800 Real
            h2.text-4xl.my-4.font-extrabold.text-center.px-2.pt-3.bg-sky-800.text-white.rounded Estate

        div.mt-10.mx-auto.max-w-md
            h2.text-gray-600.text-center.mb-5.text-2xl.font-extrabold= page

            if errors
                div(class="max-w-md mx-auto my-10")
                    each error in errors
                        p.bg-red-600.text-center.uppercase.font-bold.text-white.p-2.mb-1.text-xs= error.msg

            div.bg-white.py-8.px-4.shadow
                form(class="space-y-5" method="POST" action="/auth/signup")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="name") Name
                        input#name.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your name" type="text" name="name" value=user ? user.name : "" )
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="name") Email
                        input#email.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your email" type="text" name="email" value=user ? user.email : "")

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="name") Password
                        input#password.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="You password" type="password" name="password")

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="name") Repeat Password
                        input#repeat_password.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repeat password" type="password" name="repeatPassword")

                    div(class="flex items-center justify-between")
                        a(href="/auth/login" class="text-gray-500 text-sm") Do you already have an account? Login


                    input(class="w-full bg-sky-800 hover:bg-sky-600 cursor-pointer text-white font-bold py-3"  type="submit" value="Create account")